{
	// make sure the settings below is not present in either user and
	// workspace settings so adding ids to messages on save works
	// "eslint.codeActionsOnSave.rules": [],
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.run": "onSave",
	"editor.codeActionsOnSave": {
		"source.fixAll": "always"
	},
	"tailwindCSS.classAttributes": ["className", "clsx"],
	"css.validate": true,
	"editor.quickSuggestions": {
		"strings": true
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#f0e7e5",
		"activityBar.background": "#f0e7e5",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#72ad7c",
		"activityBarBadge.foreground": "#15202b",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#f0e7e5",
		"statusBar.background": "#ddc9c5",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#caaba5",
		"statusBarItem.remoteBackground": "#ddc9c5",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#ddc9c5",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#ddc9c599",
		"titleBar.inactiveForeground": "#15202b99"
	},
	"peacock.color": "#DDC9C5"
}
